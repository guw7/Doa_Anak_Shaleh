<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guw.doa_anak_shaleh.satu">

    <TextView
        android:id="@+id/txt_Judul"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textColor="@color/colorJudul"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <ImageView
        android:id="@+id/id_gmbr"
        android:src="@drawable/icon_android"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txt_Judul"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        app:srcCompat="@drawable/ic_play_arrow_black_24dp"
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/id_gmbr"
        android:layout_alignRight="@+id/id_gmbr"
        android:layout_alignEnd="@+id/id_gmbr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:textStyle="bold"
        android:id="@+id/id_play"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/bts1"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/id_play"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_arab"
        android:text="@string/doa_arab"
        android:textAlignment="center"
        android:textSize="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bts1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/bts2"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/tv_arab"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_indo"
        android:text="@string/doa_indo"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/bts2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/bts3"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/tv_indo"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_Arti"
        android:text="@string/doa_arti"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bts3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>
